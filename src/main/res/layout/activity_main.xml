            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/social_activity"
            android:textColor="@color/basic_color"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/calendar_display"
            app:layout_constraintEnd_toStartOf="@+id/indicator3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/action_area"
        android:clickable="true"
        android:onClick="clickActionArea"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/place_holder"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/grid_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/action_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/color_bar_area">

                <ImageButton
                    android:id="@+id/clear_button"
                    android:layout_width="@dimen/double_size_unit"
                    android:layout_height="@dimen/double_size_unit"
                    android:layout_marginStart="24dp"
                    android:background="@null"
                    android:onClick="clearGrid"
                    app:layout_constraintStart_toEndOf="@id/remove_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_round_cancel_24px" />

                <ImageButton
                    android:id="@+id/add_button"
                    android:layout_width="@dimen/double_size_unit"
                    android:layout_height="@dimen/double_size_unit"
                    android:background="@null"
                    android:onClick="activityLevelUp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_round_add_circle_outline_24px" />

                <ImageButton
                    android:id="@+id/remove_button"
                    android:layout_width="@dimen/double_size_unit"
                    android:layout_height="@dimen/double_size_unit"
                    android:layout_marginStart="24dp"
                    android:background="@null"
                    android:onClick="activityLevelDown"
                    app:layout_constraintStart_toEndOf="@+id/add_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_round_remove_circle_outline_24px" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/color_bar_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@id/action_buttons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/status_description1"
                    android:layout_width="@dimen/triple_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/coding_activity"
                    android:textColor="@color/holder_1_level_3"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/color_bar_2"
                    app:layout_constraintTop_toBottomOf="@+id/status_description0" />

                <Button
                    android:id="@+id/color_bar_2"
                    android:layout_width="@dimen/double_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/color_bar"
                    android:textSize="8sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/color_bar_0" />

                <TextView
                    android:id="@+id/status_description0"
                    android:layout_width="@dimen/triple_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/workout_activity"
                    android:textColor="@color/workout_level_3"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/color_bar_0"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/color_bar_1"
                    android:layout_width="@dimen/double_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/color_bar"
                    android:textSize="8sp"
                    app:layout_constraintEnd_toStartOf="@+id/status_description2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/status_description3"
                    android:layout_width="@dimen/triple_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:text="@string/social_activity"
                    android:textColor="@color/holder_2_level_3"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/status_description2" />

                <Button
                    android:id="@+id/color_bar_0"
                    android:layout_width="@dimen/double_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:background="@drawable/color_bar"
                    android:textSize="8sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/color_bar_3"
                    android:layout_width="@dimen/double_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/color_bar"
                    android:textSize="8sp"
                    app:layout_constraintEnd_toStartOf="@+id/status_description3"
                    app:layout_constraintTop_toBottomOf="@+id/color_bar_1" />

                <TextView
                    android:id="@+id/status_description2"
                    android:layout_width="@dimen/triple_size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:gravity="center_vertical"
                    android:text="@string/reading_activity"
                    android:textColor="@color/reading_level_3"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/drag_bar"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/drag_bar"
            android:onClick="clickBlankSpace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

