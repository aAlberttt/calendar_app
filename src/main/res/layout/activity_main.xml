                <Button
                    android:id="@+id/button06"
                    android:layout_width="@dimen/size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_weight="1"
                    android:background="@drawable/empty_grid" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_unit"
