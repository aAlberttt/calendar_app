            <TextView
                android:id="@+id/date_indicator0"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_unit"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="1"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/line_0"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_indicator1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_unit"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="8"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/line_1"
                app:layout_constraintTop_toBottomOf="@+id/date_indicator0" />

            <TextView
                android:id="@+id/date_indicator2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_unit"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="15"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/line_2"
                app:layout_constraintTop_toBottomOf="@+id/date_indicator1" />

            <TextView
                android:id="@+id/date_indicator3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_unit"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="22"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/line_3"
                app:layout_constraintTop_toBottomOf="@+id/date_indicator2" />

            <TextView
                android:id="@+id/date_indicator4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_unit"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="29"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/line_4"
                app:layout_constraintTop_toBottomOf="@+id/date_indicator3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/indicator0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/indicator2"
            app:layout_constraintEnd_toEndOf="@+id/indicator_text1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/workout_indicator" />

        <ImageView
            android:id="@+id/indicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/reading_indicator"
            app:layout_constraintBottom_toTopOf="@+id/indicator3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/indicator_text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/workout_activity"
            android:textColor="@color/basic_color"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/indicator_text2"
            app:layout_constraintEnd_toStartOf="@+id/indicator0"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/indicator_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/reading_activity"
            android:textColor="@color/basic_color"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/indicator_text3"
            app:layout_constraintEnd_toStartOf="@+id/indicator1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/calendar_display"
            app:layout_constraintEnd_toEndOf="@+id/indicator_text3"
            app:srcCompat="@drawable/coding_indicator" />

        <ImageView
            android:id="@+id/indicator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/calendar_display"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/social_indicator" />

        <TextView
            android:id="@+id/indicator_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/coding_activity"
            android:textColor="@color/basic_color"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/calendar_display"
            app:layout_constraintEnd_toStartOf="@+id/indicator2" />

        <TextView
            android:id="@+id/indicator_text3"
            android:layout_width="wrap_content"
