<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calendar_area_background"
    android:clickable="true"
    android:onClick="clickBlankSpace"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:onClick="clickBlankSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"

            android:text="@string/place_holder"
            android:textColor="@color/basic_color"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calendar_display"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/month">

            <LinearLayout
                android:id="@+id/line_0"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_unit"
                android:layout_marginTop="8dp"
                android:divider="@drawable/empty_tall_divider"
                android:orientation="horizontal"
                android:showDividers="middle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/button00"
                    android:layout_width="@dimen/size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_weight="1"
                    android:background="@drawable/empty_grid" />

                <Button
                    android:id="@+id/button01"
                    android:layout_width="@dimen/size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_weight="1"
                    android:background="@drawable/empty_grid" />

                <Button
                    android:id="@+id/button02"
                    android:layout_width="@dimen/size_unit"
                    android:layout_height="@dimen/size_unit"
                    android:layout_weight="1"
                    android:background="@drawable/empty_grid" />

                <Button
                    android:id="@+id/button03"
