<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:left="0dp">
        <shape android:shape="rectangle">
            <size
                android:height="@dimen/half_size_unit"
                android:width="@dimen/size_unit" />
            <corners android:radius="@dimen/radius_size" />
            <solid android:color="@color/holder_1_level_1" />
        </shape>
    </item>

    <item
        android:top="0dp"
        android:left="@dimen/quarter_size_unit">
        <shape android:shape="rectangle">
            <size
                android:height="@dimen/half_size_unit"
                android:width="@dimen/half_size_unit" />
            <corners android:radius="@dimen/radius_size" />
            <solid android:color="@color/holder_1_level_2" />
        </shape>
    </item>

    <item
        android:top="0dp"
        android:left="@dimen/half_size_unit">
        <shape android:shape="rectangle">
            <size
                android:height="@dimen/half_size_unit"
                android:width="@dimen/half_size_unit" />
            <corners android:radius="@dimen/radius_size" />
            <solid android:color="@color/holder_1_level_3" />
        </shape>
    </item>

    <item
        android:top="0dp"
        android:left="@dimen/three_quarter_size_unit">
        <shape android:shape="rectangle">
            <size
                android:height="@dimen/half_size_unit"
                android:width="@dimen/half_size_unit" />
            <corners android:radius="@dimen/radius_size" />
            <solid android:color="@color/holder_1_level_4" />
        </shape>
    </item>


</layer-list>